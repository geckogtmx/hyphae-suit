# Hyphae POS Environment Variables Example
# Copy this file to .env and fill in your values

# ------------------------------
# 1. API Keys & Integration
# ------------------------------
# Google Gemini API Key for AI features (Menu generation, Analytics)
GEMINI_API_KEY=your_gemini_api_key_here

# ------------------------------
# 2. Application Configuration
# ------------------------------
VITE_API_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:4000
VITE_DEBUG_MODE=0

# Feature Flags
VITE_ENABLE_LOYALTY=true
VITE_ENABLE_KITCHEN=true

# Theme (optional default)
VITE_DEFAULT_THEME=dark

# Device Configuration
VITE_TERMINAL_ID=term_001
VITE_STORE_ID=store_001
